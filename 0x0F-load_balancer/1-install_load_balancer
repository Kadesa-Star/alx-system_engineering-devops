#!/usr/bin/env bash
# Bash script to install and configure HAProxy on lb-01 server

# Update package list and install HAProxy
apt-get update
apt-get install -y haproxy

# Configure HAProxy to balance traffic between web-01 and web-02
cat <<EOF > /etc/haproxy/haproxy.cfg
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 [STUDENT_ID]-web-01:80 check
    server web-02 [STUDENT_ID]-web-02:80 check
EOF

# Enable HAProxy management via init script
sed -i 's/^ENABLED=.*/ENABLED=1/' /etc/default/haproxy

# Restart HAProxy to apply the configuration changes
service haproxy restart

# Clean up temporary files if needed
# rm -f /etc/haproxy/haproxy.cfg  # Uncomment to remove the HAProxy config file after setup

echo "HAProxy installed and configured successfully."
