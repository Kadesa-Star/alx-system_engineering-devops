#!/usr/bin/env bash
# Install and configure HAProxy to balance traffic between two web servers

# Update the package list
sudo apt-get update

# Install a specific version of HAProxy
sudo apt-get -y install haproxy=1.6.\*

# Enable HAProxy to start on boot
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Update the HAProxy configuration to balance traffic between two servers
sudo sed -i '/^#.*listen stats/,/^$/a \\nlisten http-in\n\tbind *:80\n\tmode http\n\tbalance roundrobin\n\tserver web-01 100.25.202.17:80 check\n\tserver web-02 34.207.62.126:80 check' /etc/haproxy/haproxy.cfg

# Start the HAProxy service
sudo service haproxy restart
